@model RealEstate.Models.User
<!-- title -->
<div class="bg-white align-items-center d-flex my-2 p-3" style="border-radius: 7px;">
    <a asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
    <div class="separator"></div>
    <span>Login</span>
</div>

<div class="container-fluid my-2">
    <div class="row align-items-center bg-white" style="border-radius: 10px;" id="container_of_form_data">
        <div class="col-xl-6 col-lg-6 col-12 p-3">
            <h4>Login to your account</h4>
            <form asp-action="Login" method="post">
                <div class="form-group mb-2">
                    <label asp-for="Email" class="form-label is-required">User Name</label>
                    <input asp-for="Email" type="text" class="form-control" autocomplete="off" value="">
                    <span asp-validation-for="Email" style="color: red;"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Password" class="form-label is-required">Password</label>
                    <input asp-for="Password" type="password" class="form-control" autocomplete="off" value="">
                    <span asp-validation-for="Password" style="color: red;border: none;"></span>
                </div>
                <div class="reg-footer text-center mb-4" style="text-align: start !important;">You dont have an account yet <a asp-action="Register" class="btn-link" style="color:#2DC7BF !important;">Register Here</a></div>

                <button type="submit" class="btn-dragon w-100 color-9 mx-0 mb-2 mt-4" id="login_submit">Login</button>
            </form>
        </div>
        <div class="col-xl-6 col-lg-6 col-12">
            <div class="tp-login-thumb login-space sky-bg d-flex justify-content-center">
                <img src="@Url.Content("~/images/Login.gif")" alt="image" style="width: 100%;">
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#preloader").hide();
    })
</script>

<style>
    @@media only screen and (max-width: 1000px) {
        #container_of_form_data {
            flex-direction: column-reverse !important;
        }
    }
</style>